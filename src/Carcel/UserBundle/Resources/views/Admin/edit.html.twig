{% extends "CarcelUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <a href="{{ path('carcel_user_admin') }}"
       class="btn btn-default pull-right">
        Retour
    </a>

    <h2>Édition du profil de l’utilisateur {{ form.vars.value.username }}</h2>

    <div class="well col-lg-2 col-md-3 col-sm-4">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_row(form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.submit, { 'attr': {'class': 'btn btn-default'} }) }}
        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
{% endblock fos_user_content %}
