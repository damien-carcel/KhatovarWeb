<a href="{{ path('fos_user_profile_show') }}"
   class="btn btn-default pull-right">
    Retour
</a>

<h2>Changement du mot de passe de {{ app.user.username }}</h2>

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="well col-lg-3 col-md-3 col-sm-4">
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_row(form.current_password, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.new.first, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.new.second, { 'attr': {'class': 'form-control'} }) }}
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default" />
    </div>
</form>
