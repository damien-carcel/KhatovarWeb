{% extends "::layout.html.twig" %}

{% block title %}Documents{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/carceldocuments/css/bootstrap.css'
                   'bundles/carceldocuments/css/bootstrap-theme.css'
                   'bundles/carceldocuments/css/documents.css'
                   'bundles/carceluser/css/user.css'
                   filter='cssrewrite'
                   output='css/user.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block container %}container-fluid{% endblock %}

{% block header %}
    <header class="page-header">
        <a href="{{ path('carcel_documents_homepage') }}">
            <img id="logo" src="{{ asset('bundles/carceldocuments/images/documents.png') }}" alt="Logo">
            <h1>Documents</h1>
        </a>
    </header>
{% endblock %}

{% block sectionclass %}row{% endblock %}

{% block insection %}
    {% for message in app.session.flashbag.get('notice') %}
        <div class="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="col-lg-12">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}

{% block footer %}
    <footer class="panel-footer text-center">
        <div class="col-lg-12">
            {{ 'now'|date('d/m/Y - H:i') }}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                |
                {{ 'layout.logged_in_as'|trans({'%username%': ''}, 'FOSUserBundle') }}<a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>
                |
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{ path('carcel_user_admin') }}">Page dâ€™adminitration</a>
                    |
                {% endif %}
                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>
    </footer>
{% endblock %}
