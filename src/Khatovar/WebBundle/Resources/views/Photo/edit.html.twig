{% extends "KhatovarWebBundle::layout.html.twig" %}

{% block inarticle %}
    {% if not_a_member is defined %}
        <h4>
            Désolé, vous n’avez pas de page de membres.<br />
            Vous ne pouvez donc pas éditer de photos.
        </h4>
        <a href="{{ path('khatovar_web_photos') }}">Retour à l’accueil du site</a>
    {% elseif not is_granted('ROLE_EDITOR') and photo.entity != 'member' and photo.entry != owner.id %}
        <h4>Désolé, vous n’avez pas le droit de modifier cette photo.</h4>
        <a href="{{ path('khatovar_web_photos') }}">Retour à la liste des photos</a>
    {% else %}
        <h2>Modifier les informations de la photo</h2>

        <div class="photo_admin float floatright">
            {{ photo.getWebPath()|thumbnail('landscape', photo.alt) }}
        </div>

        <div class="form-background">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% embed '@KhatovarWeb/Photo/upload.html.twig' %}{% endembed %}

            {{ form_end(form) }}
        </div>
    {% endif %}
{% endblock %}
