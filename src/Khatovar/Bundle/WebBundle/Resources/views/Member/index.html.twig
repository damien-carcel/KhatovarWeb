        <a href="{{ path('khatovar_web_member_new') }}">Ajouter un nouveau membre</a>
        <hr />
    {% endif %}

    <div class="container">
        <p>
            <b>Voici les membres de notre compagnie&nbsp;:</b>
        </p>

        {% include 'KhatovarWebBundle:Member:_list.html.twig' with {'members': active_members, 'delete_forms': active_delete_forms} %}
    </div>

    {% if past_members %}
        <div class="container">
            <p style="text-align: center">
                <b>Veni, Vidiâ€¦ mais pas Vici : les anciens</b>
            </p>

            {% include 'KhatovarWebBundle:Member:_list.html.twig' with {'members': past_members, 'delete_forms': past_delete_forms} %}
        </div>
    {% endif %}
{% endblock %}
