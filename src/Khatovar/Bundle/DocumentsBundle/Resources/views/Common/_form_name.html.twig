<div class="well col-lg-2 col-md-3 col-sm-4">
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_row(form.submit, { 'attr': {'class': 'btn btn-default'} }) }}
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
